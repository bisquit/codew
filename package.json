{
  "name": "codew",
  "description": "Open folder as a vscode multi-root workspace",
  "version": "0.0.8",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "codew": "./dist/index.js"
  },
  "engines": {
    "node": ">=v18.16.1"
  },
  "scripts": {
    "dev": "cross-env DEBUG=codew tsx src/index.ts",
    "build-base": "tsup src/index.ts --format esm --clean",
    "build": "pnpm build-base --minify",
    "build:debug": "pnpm build-base --env.DEBUG=codew",
    "test": "vitest",
    "test:coverage": "vitest --coverage.enabled --coverage.provider=v8 --coverage.all --coverage.clean --coverage.include=src --coverage.exclude=src/index.ts --coverage.exclude=src/commands",
    "test:ci": "pnpm run test:coverage --run",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier --check src",
    "fix:prettier": "prettier --write src",
    "typecheck": "tsc --noEmit && echo 'Type checking passed!'",
    "validate": "run-p lint typecheck --print-label --continue-on-error",
    "release": "bumpp"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "cleye": "^1.3.2",
    "execa": "^7.1.1",
    "lowdb": "^6.0.1",
    "mkdirp": "^3.0.1",
    "picocolors": "^1.0.0",
    "slash": "^5.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.32.2",
    "bumpp": "^9.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsup": "^7.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/codew.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/codew/issues"
  },
  "keywords": [
    "vscode",
    "workspace"
  ]
}
